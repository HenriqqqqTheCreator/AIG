<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="zapzap.tccetec.com.aig.fragment.SegundoFragment"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:elevation="10dp">

            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Suas maiores pontuações"
                        android:id="@+id/tvNomePerfil"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        android:fontFamily="@font/quicksand_light"
                        android:textSize="20sp"/>

                </LinearLayout>

        </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#030147"
                android:id="@+id/imageview_iniciante"
                android:src="@drawable/inicianteicon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Pontuação iniciante"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/secondFrag"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/text_view_pontos_iniciante"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="0 Pontos"
                        android:textAlignment="center"
                        android:textColor="@color/secondFrag"
                        android:textSize="20sp" />

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#030147"
                        android:id="@+id/imageview_intermediario"
                        android:src="@drawable/intermediarioicon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:text="Pontuação intermediário"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/secondFrag"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="0 Pontos"
                        android:id="@+id/text_view_pontos_intermediario"
                        android:textAlignment="center"
                        android:textColor="@color/secondFrag"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp   "
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/imageview_avancado"
                        android:background="#030147"
                        android:src="@drawable/avancadoicon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="Pontuação avançado"
                        android:textColor="@color/secondFrag"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="0 Pontos"
                        android:id="@+id/text_view_pontos_avancado"
                        android:textAlignment="center"
                        android:textColor="@color/secondFrag"
                        android:textSize="20sp" />

                </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>