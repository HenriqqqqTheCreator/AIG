<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundoaig"
    tools:context="zapzap.tccetec.com.aig.CadastrarActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        android:text="AIG"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_light"
        android:text="Criar uma nova conta no"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editNomeCadastroID"
        android:layout_width="298dp"
        android:layout_marginTop="60dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#00ffffff"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_person_outline"
        android:ems="10"
        android:fontFamily="@font/quicksand_medium"
        android:hint="Seu nome"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/editEmailCadastroID"
        android:layout_width="298dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00ffffff"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_email"
        android:ems="10"
        android:fontFamily="@font/quicksand_medium"
        android:hint="Seu e-mail"
        android:inputType="textPersonName"
        android:layout_gravity="center_horizontal"
        android:textColorHint="#FFFFFF"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/editSenhaCadastroID"
        android:layout_width="298dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00ffffff"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_lock_outline"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:fontFamily="@font/quicksand_medium"
        android:hint="Sua senha"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editSenhConfirmar"
        android:layout_width="298dp"
        android:layout_height="40dp"
        android:backgroundTint="#00ffffff"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/quicksand_medium"
        android:hint="Confirme sua senha"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        android:layout_gravity="center_horizontal"
        android:text="AS DUAS SENHAS DEVEM SER IGUAIS"
        android:textColor="#ff0000"
        android:layout_margin="10dp"
        android:visibility="invisible"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_gravity="center_horizontal"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnCadastrarID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00d80b0b"
                android:fontFamily="@font/quicksand_medium"
                android:text="Cadastrar"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>