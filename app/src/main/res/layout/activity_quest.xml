<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context="zapzap.tccetec.com.aig.licao.QuestActivity">


    <TextView
        android:id="@+id/text_view_pontuacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontuação: 0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempo restante"
        android:layout_marginTop="-20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="270dp"/>


    <TextView
        android:id="@+id/text_view_contagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:text="00:30"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="310dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/tvPergunta"
        android:text="Qual o conceito de investimento?"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="18sp"
        android:fontFamily="@font/quicksand_medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnRespostaUm"
        android:layout_width="230dp"
        android:padding="5dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:elevation="5dp"
        android:textSize="10sp"
        android:textAlignment="center"
        android:text="Resposta um"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnRespostaDois"
        android:layout_width="230dp"
        android:padding="5dp"
        android:layout_height="70dp"
        android:elevation="5dp"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:text="Resposta Dois"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btnRespostaTres"
        android:layout_width="230dp"
        android:elevation="5dp"
        android:padding="5dp"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:text="Resposta Tres"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btnRespostaQuatro"
        android:layout_width="230dp"
        android:elevation="5dp"
        android:textSize="10sp"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:text="Resposta Quatro"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btnProximaPergunta"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="#636b9f"
        android:text="PROXIMA PERGUNTA"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="invisible" />

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_question_count"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:text="Pergunta: 01/15"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-50dp" />

</LinearLayout>